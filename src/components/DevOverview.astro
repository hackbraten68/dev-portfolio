---
import TypedText from "./TypedText.astro";
import Github from "./sub/Github.astro";
import Linkedin from "./sub/Linkedin.astro";
import Mail from "./sub/Mail.astro";
import Image from "astro/components/Image.astro";
---

<section class="flex flex-col lg:flex-row lg:max-w-7xl mx-auto px-4 lg:px-6 justify-between">
    <div class="lg:w-2/3 space-y-2 lg:space-y-4">
        <p class="text-2xl">Hi, my name is</p>
        <h1 class="text-4xl">Sam Dillenburg</h1>
        <div class="text-2xl">
            <TypedText />
        </div>
        <div class="">Lorem ipsum dolor sit amet consectetur adipisicing elit. Assumenda quisquam, pariatur modi eveniet, sunt molestias sint neque similique consequatur dolore eaque accusamus magnam. Qui, eum excepturi. Possimus nulla neque iure.</div>
        <div class="flex justify-center lg:justify-start mt-8">
            <button type="button" class="text-white bg-gradient-to-r 
                                         from-blueViolet to-deepPink hover:bg-gradient-to-l 
                                         focus:ring-4 focus:outline-none focus:ring-purple-200 
                                         dark:focus:ring-purple-800 font-medium rounded-lg 
                                         text-sm px-5 py-2.5 text-center me-2 mb-2"
                                         >Download CV
            </button>
            <button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2
                           overflow-hidden text-sm font-medium text-gray-900 rounded-lg group
                           bg-gradient-to-br from-blueViolet to-deepPink group-hover:from-purple-600
                           group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4
                           focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                Purple to blue
                </span>
                </button>
        </div>
    </div>
    <div class="flex flex-col py-10 lg:py-0 lg:w-1/3">
        <!-- Dev Avatar -->
        <img class="lg:w-96 lg:h-96 p-1 rounded-full ring-2 ring-gray-300 dark:ring-gray-500" src="/avatar/dev_avatar.jpg" alt="Bordered avatar">
        <!-- Socials -->
        <div class="flex space-x-4 center justify-center lg:py-4 text-aquaBlue">
            <Github />
            <Linkedin />
            <Mail />
        </div>
    </div>
</section>