---
import TypedText from "./TypedText.astro";
import DevTiles from "./DevTiles.astro";
const { name, welcomeText } = Astro.props;
---

<section class="lg:flex items-center justify-center gap-6 h-5/6 my-auto mx-auto lg:w-[1024px] px-4 lg:px-0">
    <div class="lg:w-2/3 pr-3 space-y-3">
        <p class="text-3xl font-menlo">Hi, my name is <span class="text-4xl lg:text-6xl text-deepPink">{name}</span></p>
        <div class="text-xl h-[50px]">
            <TypedText />
        </div>
        <div class="">{welcomeText}</div>
    </div>
    <DevTiles 
        tileOne="My Journey"
        tileOneHref="Roadmap →"

        tileTwo="Hire Me"
        tileTwoHref="Resume →"

        tileThree="What I built"
        tileThreeHref="Projects →"
    />
</section>