---
import { formatDate } from "../utils";
import type { CollectionEntry } from "astro:content";
import Tags from "./Tags.astro";

const { article } = Astro.props;

interface Props {
    article: CollectionEntry<'blog'>;
}
// Dynamische Farben f√ºr das Gradient
const fromColor = article.data.from || 'blue-300';
const toColor = article.data.to || 'pink-300';
---
<div class="group relative">
    <!-- Gradient Background -->
    <div class={`absolute -inset-0.5 rounded-lg bg-gradient-to-r ${fromColor} ${toColor} opacity-50 blur transition duration-1000 group-hover:opacity-100 group-hover:duration-200 z-0`}></div>
    <!-- Content Wrapper -->
    <a href={'/articles/' + article.slug} class="relative flex flex-col items-start rounded-lg bg-synthwaveNachtBlau bg-opacity-100 z-10 hover:scale-105 transition-transform duration-300 ease-in-out">
        <div class="flex flex-col items-center justify-between w-full mb-4">
            <!-- Article Image -->
            <img
                    src={'/images/' + article.data.image}
                    alt="Article Image"
                    class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
            />
            <!-- Article Content -->
            <div class="py-6">
                <h2 class="text-2xl font-semibold mb-2">
                    <a href={'/articles/' + article.slug}> {article.data.title} </a>
                </h2>
                <Tags tags={article.data.tags} />
            </div>
        </div>
    </a>
</div>