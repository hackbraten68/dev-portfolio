---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout 
	title="This is Sam - Dev Portfolio"
	seoTitle="This is Sam - a frontend web developer portfolio page"
	seoDesc="A New Portfolio Page made with astro, tailwindcss and alpineJS"
>
<div id="typed-strings">
	<p>Hey, <br>my name is <strong>Sam</strong></p>
	<p>i am a <br><strong>frontend developer</strong></p>
</div>
<div class="w-8/12 md:w-6/12 mx-auto text-center">
	<span class="text-3xl md:text-6xl" id="typed"></span>
</div>
</MainLayout>

<script>
	import Typed from "typed.js";

	var typed = new Typed('#typed', {
    stringsElement: '#typed-strings',
	typeSpeed: 50,
	backSpeed: 30,
	loop: true,
  	loopCount: Infinity,
	
  });
  </script>